@model PLCLAB.Models.PLC

@{
    ViewBag.Title = "Usuń PLC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.IsInRole("Admin"))
{
    <h3>Na pewno usunąć ten PLC z bazy?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                Nazwa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Opis
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Adres IP
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IPAddress)
            </dd>

            <dt>
                Port
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Port)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Usuń" class="btn btn-warning" />
                |
                @Html.ActionLink("Powrót", "Main", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
}
else
{
    @Html.ActionLink("Powrót", "Main", null, new { @class = "btn btn-primary" })
}